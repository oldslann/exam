<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/skill_bg">

    <ImageButton
        android:id="@+id/skill_btn1"
        android:layout_width="173dp"
        android:layout_height="68dp"
        android:layout_marginTop="230dp"
        android:background="@android:drawable/list_selector_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@mipmap/skill_b1" />

    <ImageButton
        android:id="@+id/skill_btn2"
        android:layout_width="141dp"
        android:layout_height="72dp"
        android:layout_marginTop="50dp"
        android:background="@android:drawable/list_selector_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skill_btn1"
        app:srcCompat="@mipmap/skill_b2" />

    <ImageButton
        android:id="@+id/skill_btn3"
        android:layout_width="167dp"
        android:layout_height="72dp"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        android:layout_marginRight="8dp"
        android:background="@android:drawable/list_selector_background"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/skill_btn2"
        app:srcCompat="@mipmap/skill_b3" />
</androidx.constraintlayout.widget.ConstraintLayout>